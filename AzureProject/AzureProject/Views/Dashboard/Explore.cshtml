@model IEnumerable<AzureProject.Models.Products>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Explore";
}
<head>
    <style>
    body {
    background-image: url('data:image/jpeg;base64,');
    background-repeat: no-repeat;
    background-size:cover;
    font-size:large;
    font-display:block;
    font-palette:dark; 
    }
    </style>
</head>
<body>
<h1>Explore</h1>
<br />

<table class="table table-bordered  table-hover" >
    <thead>
        <tr class="table-danger">
            <th >
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-light">
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @{
                                        var role1= HttpContextAccessor.HttpContext.Session.GetInt32("role");
                                        if(role1==1)
                                        {
                                        <td>
                                        <a href="~/Dashboard/Edit?id=@item.ProductId" class="btn btn-outline-success">Edit</a>
                                        <a href="~/Dashboard/Delete?id=@item.ProductId" class="btn btn-outline-danger" style="margin-left:3%">Delete</a>
                                    
                                        </td>
                                    }
                                    else
                                    {
                                         <td>
                                            <a href="~/Dashboard/AddToCart?id=@item.ProductId" class="btn btn-outline-success">Add To Cart</a>
                                         </td>
                                        
                                    }

                                        }
            
            
        </tr>
}
    </tbody>
</table>
<br />
<td>
        <a href="~/Dashboard/Categories" class="btn btn-success">Back to Categories</a>
</td>

</body>